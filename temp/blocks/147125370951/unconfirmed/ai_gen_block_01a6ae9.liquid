{% doc %}
  @prompt
    Banner responsive, Center the image
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-banner-{{ ai_gen_id }} {
    display: block;
    position: relative;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    margin: 0 auto;
  }

  .ai-banner-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-banner-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-banner-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
  }

  .ai-banner-content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_vertical_alignment }};
    align-items: {{ block.settings.content_horizontal_alignment }};
    padding: 40px;
    text-align: {{ block.settings.text_alignment }};
    z-index: 2;
  }

  .ai-banner-content-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
  }

  .ai-banner-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-banner-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0 0 24px;
    line-height: 1.5;
  }

  .ai-banner-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    transition: all 0.3s ease;
  }

  .ai-banner-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_bg_hover_color }};
    color: {{ block.settings.button_text_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-banner-container-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }

    .ai-banner-content-{{ ai_gen_id }} {
      padding: 24px;
    }

    .ai-banner-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
    }

    .ai-banner-text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.text_size }}px * 0.9);
    }

    .ai-banner-button-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.button_text_size }}px * 0.9);
      padding: 10px 24px;
    }

    .ai-banner-content-wrapper-{{ ai_gen_id }} {
      max-width: 100%;
    }
  }
{% endstyle %}

<responsive-banner-{{ ai_gen_id }} class="ai-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-banner-container-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-banner-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-banner-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-banner-empty-state-{{ ai_gen_id }}">
          Next, add an image
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_overlay %}
      <div class="ai-banner-overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    <div class="ai-banner-content-{{ ai_gen_id }}">
      <div class="ai-banner-content-wrapper-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-banner-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}

        {% if block.settings.text != blank %}
          <div class="ai-banner-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
        {% endif %}

        {% if block.settings.button_text != blank %}
          <a
            href="{{ block.settings.button_link }}"
            class="ai-banner-button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</responsive-banner-{{ ai_gen_id }}>

<script>
  (function() {
    class ResponsiveBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.adjustLayout();
        window.addEventListener('resize', () => this.adjustLayout());
      }

      adjustLayout() {
        const container = this.querySelector('.ai-banner-container-{{ ai_gen_id }}');
        if (container) {
          const width = container.offsetWidth;
          if (width < 750) {
            container.classList.add('mobile');
          } else {
            container.classList.remove('mobile');
          }
        }
      }
    }

    customElements.define('responsive-banner-{{ ai_gen_id }}', ResponsiveBanner{{ ai_gen_id }});
  })();
</script>

