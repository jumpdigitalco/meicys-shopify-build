      "content": "Close button"
    },
    {
      "type": "color",
      "id": "close_button_bg",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "close_button_hover_bg",
      "label": "Hover background",
      "default": "#f4f4f4"
    },
    {
      "type": "color",
      "id": "close_button_color",
      "label": "Icon color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Image popup"
    }
  ]
}
{% endschema %}