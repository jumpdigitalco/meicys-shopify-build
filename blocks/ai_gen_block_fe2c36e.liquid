{% doc %}
  @prompt
    A pop-up to notify buyers that shipments are paused due to inventory at the company and will resume on a specific date
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-shipment-popup-overlay-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 9998;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    display: block;
  }

  .ai-shipment-popup-overlay-{{ ai_gen_id }}.active {
    opacity: 1;
    visibility: visible;
  }

  .ai-shipment-popup-container-{{ ai_gen_id }} {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.9);
    background-color: {{ block.settings.popup_bg_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.padding }}px;
    max-width: {{ block.settings.popup_width }}px;
    width: 90%;
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease, transform 0.3s ease;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  }

  .ai-shipment-popup-container-{{ ai_gen_id }}.active {
    opacity: 1;
    visibility: visible;
    transform: translate(-50%, -50%) scale(1);
  }

  .ai-shipment-popup-close-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.padding | divided_by: 2 }}px;
    right: {{ block.settings.padding | divided_by: 2 }}px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .ai-shipment-popup-close-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .ai-shipment-popup-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin: 0 auto {{ block.settings.spacing }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
  }

  .ai-shipment-popup-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-shipment-popup-content-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-shipment-popup-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.spacing }}px;
    font-weight: 600;
  }

  .ai-shipment-popup-message-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0 0 {{ block.settings.spacing }}px;
  }

  .ai-shipment-popup-date-{{ ai_gen_id }} {
    color: {{ block.settings.date_color }};
    font-size: {{ block.settings.date_size }}px;
    font-weight: 600;
    margin: 0 0 {{ block.settings.spacing }}px;
  }

  .ai-shipment-popup-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    padding: 12px 32px;
    font-size: {{ block.settings.button_text_size }}px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    margin-top: {{ block.settings.spacing | divided_by: 2 }}px;
  }

  .ai-shipment-popup-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-shipment-popup-container-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.75 }}px;
    }

    .ai-shipment-popup-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-shipment-popup-message-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-shipment-popup-date-{{ ai_gen_id }} {
      font-size: {{ block.settings.date_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<shipment-notification-{{ ai_gen_id }} {{ block.shopify_attributes }}>
  <div class="ai-shipment-popup-overlay-{{ ai_gen_id }}" data-overlay></div>
  
  <div class="ai-shipment-popup-container-{{ ai_gen_id }}" data-popup>
    <button
      class="ai-shipment-popup-close-{{ ai_gen_id }}"
      aria-label="Cerrar notificación"
      data-close
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    {% if block.settings.show_icon %}
      <div class="ai-shipment-popup-icon-{{ ai_gen_id }}">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="64"
          height="64"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <rect x="1" y="3" width="15" height="13"></rect>
          <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
          <circle cx="5.5" cy="18.5" r="2.5"></circle>
          <circle cx="18.5" cy="18.5" r="2.5"></circle>
          <line x1="12" y1="1" x2="12" y2="5"></line>
          <line x1="10" y1="3" x2="14" y2="3"></line>
        </svg>
      </div>
    {% endif %}

    <div class="ai-shipment-popup-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-shipment-popup-heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.message != blank %}
        <div class="ai-shipment-popup-message-{{ ai_gen_id }}">
          {{ block.settings.message }}
        </div>
      {% endif %}

      {% if block.settings.resume_date != blank %}
        <div class="ai-shipment-popup-date-{{ ai_gen_id }}">
          {{ block.settings.date_label }} {{ block.settings.resume_date }}
        </div>
      {% endif %}

      {% if block.settings.show_button %}
        <button
          class="ai-shipment-popup-button-{{ ai_gen_id }}"
          data-close
        >
          {{ block.settings.button_text }}
        </button>
      {% endif %}
    </div>
  </div>
</shipment-notification-{{ ai_gen_id }}>

<script>
  (function() {
    class ShipmentNotification{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.overlay = this.querySelector('[data-overlay]');
        this.popup = this.querySelector('[data-popup]');
        this.closeButtons = this.querySelectorAll('[data-close]');
        this.cookieName = 'shipment_notification_{{ ai_gen_id }}_dismissed';
        this.cookieDays = {{ block.settings.cookie_days }};
      }

      connectedCallback() {
        if (!this.hasBeenDismissed()) {
          this.show();
        }
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.closeButtons.forEach(button => {
          button.addEventListener('click', () => this.close());
        });

        this.overlay.addEventListener('click', () => {
          if ({{ block.settings.close_on_overlay }}) {
            this.close();
          }
        });

        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && this.popup.classList.contains('active')) {
            this.close();
          }
        });
      }

      show() {
        setTimeout(() => {
          this.overlay.classList.add('active');
          this.popup.classList.add('active');
          document.body.style.overflow = 'hidden';
        }, {{ block.settings.delay }} * 1000);
      }

      close() {
        this.overlay.classList.remove('active');
        this.popup.classList.remove('active');
        document.body.style.overflow = '';
        this.setCookie();
      }

      hasBeenDismissed() {
        const cookies = document.cookie.split(';');
        for (let cookie of cookies) {
          const [name, value] = cookie.trim().split('=');
          if (name === this.cookieName && value === 'true') {
            return true;
          }
        }
        return false;
      }

      setCookie() {
        const date = new Date();
        date.setTime(date.getTime() + (this.cookieDays * 24 * 60 * 60 * 1000));
        const expires = 'expires=' + date.toUTCString();
        document.cookie = this.cookieName + '=true;' + expires + ';path=/';
      }
    }

    customElements.define('shipment-notification-{{ ai_gen_id }}', ShipmentNotification{{ ai_gen_id }});
  })();
</script>

